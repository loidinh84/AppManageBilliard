<UserControl x:Class="AppManageBilliard.UserControls.ucBill"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="950" d:DesignWidth="450"
             Background="#F8FAFC"
             FontFamily="Segoe UI">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="15">
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="txtTableTitle"
                           Text="Bàn"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="#1E40AF"
                           VerticalAlignment="Center"/>
                <Button x:Name="btnCancelTable"
                        Content="Hủy bàn"
                        Grid.Column="1"
                        Padding="20,10"
                        Background="#EF4444"
                        Foreground="White"
                        FontWeight="Bold"
                        FontSize="14"
                        Click="btnCancelTable_Click"/>
            </Grid>

            <ComboBox x:Name="cbDiscount"
                      Width="180"
                      HorizontalAlignment="Right"
                      Margin="0,0,0,20"
                      FontSize="15"
                      Padding="10,5"
                      SelectedIndex="0"
                      SelectionChanged="cbDiscount_SelectionChanged">
                <ComboBoxItem Content="Giảm giá: 0%"/>
                <ComboBoxItem Content="Giảm giá: 5%"/>
                <ComboBoxItem Content="Giảm giá: 10%"/>
                <ComboBoxItem Content="Giảm giá: 15%"/>
                <ComboBoxItem Content="Giảm giá: 20%"/>
                <ComboBoxItem Content="Giảm giá: 30%"/>
            </ComboBox>



            <TextBlock Text="Chi tiết gọi món mới" FontWeight="SemiBold" FontSize="14" Margin="5,10,0,5" Foreground="#64748B"/>

            <Border Background="White"
                    MinHeight="180"
                    Margin="0,0,0,20"
                    BorderBrush="#E2E8F0"
                    BorderThickness="1"
                    CornerRadius="10">
                <ListView x:Name="lvExtraItems" 
                          ItemsSource="{Binding BillItems}"
                          BorderThickness="0" 
                          Background="Transparent"
                          FontSize="14" Height="273">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Tên món" Width="170">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Name}" Padding="5,0"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn Header="SL" Width="50" DisplayMemberBinding="{Binding Quantity}"/>

                            <GridViewColumn Header="Đơn giá" Width="90" DisplayMemberBinding="{Binding PriceFormatted}"/>

                            <GridViewColumn Header="Thành tiền" Width="100">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding TotalFormatted}" FontWeight="Bold" Foreground="#1E40AF"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Border>

            <Border Background="#ECFDF5" Padding="20" Margin="0,0,0,20" CornerRadius="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Giờ bắt đầu" FontWeight="SemiBold" FontSize="15"/>
                        <TextBlock x:Name="txtStartTime" Text="00:00:00" FontWeight="Bold" FontSize="18"/>
                        <TextBlock Text="Tổng giờ chơi" FontWeight="SemiBold" FontSize="15" Margin="0,15,0,0"/>
                        <TextBlock x:Name="txtPlayTime" Text="0h 0p" FontWeight="Bold" FontSize="20" />
                    </StackPanel>
                    <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                        <TextBlock Text="Tổng món" FontWeight="SemiBold" FontSize="15"/>
                        <TextBlock x:Name="txtFoodCount" Text="0" FontWeight="Bold" FontSize="20" HorizontalAlignment="Right"/>
                    </StackPanel>
                </Grid>
            </Border>

            <StackPanel Margin="0,0,0,30" HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="Tổng tiền: " 
                               FontSize="22" 
                               FontWeight="SemiBold" 
                               VerticalAlignment="Center" Height="35" Width="100"/>
                    <TextBlock x:Name="txtGrandTotal"
                               Text="0 đ"
                               FontSize="22"
                               FontWeight="ExtraBold"
                               Foreground="#DC2626"
                               VerticalAlignment="Center"
                               Margin="8,0,0,0"/>
                </StackPanel>
            </StackPanel>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="btnTransferTable"
                        Content="Chuyển bàn"
                        Grid.Column="0"
                        Height="60"
                        Background="#F97316"
                        Foreground="White"
                        FontSize="18"
                        FontWeight="Bold"
                        Margin="0,0,10,0"
                        Click="btnTransferTable_Click"/>
                <Button x:Name="btnPayment"
                        Content="Thanh Toán"
                        Grid.Column="1"
                        Height="60"
                        Background="#10B981"
                        Foreground="White"
                        FontSize="18"
                        FontWeight="Bold"
                        Click="btnPayment_Click"/>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</UserControl>