<Window x:Class="AppManageBilliard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppManageBilliard"
        xmlns:uc="clr-namespace:AppManageBilliard.UserControls"
        mc:Ignorable="d"
        Title="Quản lý Quán Bida - POS" Height="768" Width="1366"
        WindowStartupLocation="CenterScreen" Background="#F0F2F5"
        WindowState="Maximized">

    <Window.Resources>
        <Style TargetType="TabItem">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="25,12"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border Name="Border" BorderThickness="0,0,0,3" BorderBrush="Transparent" Margin="0,0,10,0">
                            <ContentPresenter x:Name="ContentSite"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center"
                                            ContentSource="Header"
                                            Margin="10,2"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#007ACC" />
                                <Setter Property="Foreground" Value="#007ACC" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter Property="Foreground" Value="#666666" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.5*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <TabControl Grid.Column="0" Margin="10,10,5,10" BorderThickness="0" Background="Transparent">
            <TabItem Header="PHÒNG BÀN">
                <Grid Background="White">
                    <uc:ucTableManager x:Name="AreaTable"/>
                </Grid>
            </TabItem>

            <TabItem Header="THỰC ĐƠN">
                <Grid Background="White">
                    <uc:ucMenu x:Name="AreaMenu"/>
                </Grid>
            </TabItem>
        </TabControl>

        <Border Grid.Column="1" Margin="5,10,10,10" Background="White" CornerRadius="8">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Direction="270" Color="#DDDDDD"/>
            </Border.Effect>

            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="0,0,0,10">
                    <TextBlock Text="HÓA ĐƠN THANH TOÁN" Foreground="Gray" FontSize="12"/>
                    <TextBlock x:Name="lblCurrentTable" Text="Chọn bàn để xem" 
                               FontSize="22" FontWeight="Bold" Foreground="#333"/>
                    <Separator Margin="0,10,0,0"/>
                </StackPanel>

                <uc:ucBill Grid.Row="1" x:Name="AreaBill"/>

                <StackPanel Grid.Row="2" Margin="0,10,0,0">
                    <DockPanel LastChildFill="False" Margin="0,0,0,15">
                        <TextBlock Text="Tổng cộng:" FontSize="16" VerticalAlignment="Center"/>
                        <TextBlock x:Name="lblTotalPrice" Text="0 đ" FontSize="24" FontWeight="Bold" Foreground="#D9534F" DockPanel.Dock="Right"/>
                    </DockPanel>

                    <Button Content="THANH TOÁN" Height="55" FontSize="18" FontWeight="Bold" 
                            Background="#007ACC" Foreground="White" BorderThickness="0">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="6"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <Grid x:Name="grdLoginOverlay" Background="#F0F2F5" Visibility="Collapsed" Grid.ColumnSpan="2">
            <uc:ucLogin x:Name="AreaLogin" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>

    </Grid>
</Window>